<body>
    <div class="container" role="main" aria-label="Ucapan ulang tahun interaktif untuk Finaa">
        <h1>Selamat Ulang Tahun, Finaa!</h1>
        <div id="messageBox" class="message-box" aria-live="polite" aria-atomic="true"></div>
        <div class="controls">
            <button id="prevBtn" aria-label="Pesan sebelumnya" disabled>Previous</button>
            <button id="nextBtn" aria-label="Pesan berikutnya">Next</button>
        </div>
    </div>

    <script>
        const messages = [
            "hiii…..finaa",
            "I’m so sorry I missed your special day",
            "I hope you don’t mind me bringing you a cake and celebrating your birthday a little late",
            "By the way… say hi to your mom, dad, and your sibling for me",
            `Happy birthday, my sweet girl. I don’t want to disturb you, but if you ever need someone to talk to, I’ll be right here — always waiting for you. No matter the time, no matter the reason, my heart will always have space for your story.<br><br>And just so you know… I’m always waiting for a notification from you — hoping it’s your name lighting up my screen.`
        ];

        const messageBox = document.getElementById('messageBox');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        let currentIndex = 0;

        function renderMessage(index) {
            messageBox.style.opacity = 0;
            setTimeout(() => {
                messageBox.innerHTML = messages[index];
                messageBox.style.opacity = 1;
            }, 300);

            prevBtn.disabled = index === 0;
            nextBtn.disabled = index === messages.length - 1;
        }

        prevBtn.addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
                renderMessage(currentIndex);
            }
        });

        nextBtn.addEventListener('click', () => {
            if (currentIndex < messages.length - 1) {
                currentIndex++;
                renderMessage(currentIndex);
            }
        });

        renderMessage(currentIndex);
    </script>
</body>
</html>
