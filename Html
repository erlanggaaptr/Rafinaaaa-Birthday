            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        .container {
            background: rgba(255, 255, 255, 0.88);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            padding: 30px 35px;
            text-align: center;
        }
        h1 {
            font-size: 2.5rem;
            color: #d5006d;
            margin-bottom: 30px;
        }
        .message-box {
            font-size: 1.2rem;
            background: #ffb6c1;
            border-radius: 10px;
            padding: 25px;
            margin: 20px 0 30px;
            min-height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            line-height: 1.5;
            transition: opacity 0.4s ease;
        }
        .controls {
            display: flex;
            justify-content: space-between;
        }
        button {
            background: #d5006d;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 12px 20px;
            cursor: pointer;
            font-weight: 700;
            font-size: 1rem;
            transition: background 0.3s;
        }
